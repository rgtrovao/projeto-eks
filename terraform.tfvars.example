# Exemplo de arquivo de variáveis
# Copie este arquivo para terraform.tfvars e ajuste conforme necessário

aws_region   = "us-east-1"
project_name = "rgtrovao-project"
environment  = "dev"

vpc_name = "rgtrovao-vpc"
vpc_cidr = "10.0.0.0/16"

availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Subnets públicas - uma por AZ
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]

# Subnets privadas - uma por AZ
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# Subnets de banco de dados - uma por AZ
database_subnet_cidrs = ["10.0.21.0/24", "10.0.22.0/24", "10.0.23.0/24"]

enable_dns_hostnames = true
enable_dns_support   = true
enable_nat_gateway   = true

# Tags adicionais
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Application = "rgtrovao"
}

# Configurações padrão do EKS
eks_cluster_version    = "1.30"
eks_node_desired_size  = 2
eks_node_min_size      = 2
eks_node_max_size      = 3
eks_node_instance_types = ["t3.micro"]
eks_node_disk_size     = 20
